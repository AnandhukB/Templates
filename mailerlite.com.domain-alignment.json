{  
   "providerId": "mailerlite.com",
   "providerName": "MailerLite",
   "serviceId": "domain-alignment",
   "serviceName": "MailerLite Domain Alignment",
   "version": 1,
   "description": "Control your sender reputation with your own domain.",
   "syncPubKeyDomain": "mlsend.com",
   "variableDescription": "ip is the IP address of the server.",
   "records": [
      {
         "type": "A",
         "host": "@",
         "pointsTo": "%ip%",
         "ttl": 3600
      },
      {
         "type": "MX",
         "host": "@",
         "pointsTo": "mail.litesrv.io",
         "priority": 10,
         "ttl": 3600
      },
      {
         "type": "TXT",
         "host": "@",
         "data": "v=spf1 a mx include:_spf.mlsend.com -all",
         "ttl": 3600
      }
   ]
}
