{  
   "providerId": "mailerlite.com",
   "providerName": "MailerLite",
   "serviceId": "website",
   "serviceName": "MailerLite Sites",
   "version": 1,
   "description": "Create websites or landing pages using your own domain.",
   "syncPubKeyDomain": "mlsend.com",
   "variableDescription": "subHost is the subdomain and ip is the IP address of the server.",
   "records": [
      {
         "groupId": "domain",
         "type": "A",
         "host": "@",
         "pointsTo": "%ip%",
         "ttl": 3600
      },
      {
         "groupId": "redirect",
         "type": "CNAME",
         "host": "www",
         "pointsTo": "pages.mailerlite.com",
         "ttl": 3600
      },
      {
         "groupId": "subdomain",
         "type": "CNAME",
         "host": "%subHost%",
         "pointsTo": "pages.mailerlite.com",
         "ttl": 3600
      }
   ]
}
